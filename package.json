{
  "name": "inline-source",
  "description": "Inline all flagged js, css, image source files",
  "version": "7.1.0",
  "author": "popeindustries <alex@pope-industries.com>",
  "keywords": [
    "inline",
    "html",
    "js",
    "css",
    "svg"
  ],
  "dependencies": {
    "csso": "^4.0.1",
    "htmlparser2": "^4.0.0",
    "superagent": "^5.1.0",
    "svgo": "^1.3.0",
    "terser": "^4.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "handlebars": "^4.1.2",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.0",
    "memory-fs": "*",
    "mocha": "^6.2.0",
    "nock": "^11.3.2",
    "prettier": "^1.18.2"
  },
  "main": "index.js",
  "scripts": {
    "format": "prettier --write './{lib,test}/**/*.{js,json,css}'",
    "lint": "eslint './{lib,test}/**/*.js'",
    "test": "NODE_ENV=test mocha --reporter spec --bail"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 80,
    "singleQuote": true
  },
  "repository": "git://github.com/popeindustries/inline-source.git",
  "readmeFilename": "README.md",
  "license": "MIT"
}
