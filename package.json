{
  "name": "inline-source",
  "description": "Inline all flagged js, css, image source files",
  "version": "7.2.0",
  "author": "popeindustries <alex@pope-industries.com>",
  "keywords": [
    "inline",
    "html",
    "js",
    "css",
    "svg"
  ],
  "dependencies": {
    "csso": "^4.2.0",
    "htmlparser2": "^6.0.0",
    "superagent": "^7.0.1",
    "svgo": "^1.3.0",
    "terser": "^5.5.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "handlebars": "^4.7.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "memory-fs": "*",
    "mocha": "^8.2.1",
    "nock": "^13.0.5",
    "prettier": "^2.2.1"
  },
  "main": "index.js",
  "scripts": {
    "format": "prettier --write './{lib,test}/**/*.{js,json,css}'",
    "lint": "eslint './{lib,test}/**/*.js'",
    "test": "NODE_ENV=test mocha --reporter spec --bail"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 80,
    "singleQuote": true
  },
  "repository": "git://github.com/popeindustries/inline-source.git",
  "readmeFilename": "README.md",
  "license": "MIT"
}
